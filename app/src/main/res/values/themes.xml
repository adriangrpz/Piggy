<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Piggy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textColor">#000000</item>
        <item name="bgColor">#ffffff</item>
        <item name="text_primary">#000000</item>
        <item name="text_muted">#606060</item>
        <item name="accent">#FEC260</item>
        <item name="white">#FFFFFF</item>
        <item name="over_bg">#606060</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textColor">#ffffff</item>
        <item name="bgColor">#000000</item>
        <item name="text_primary">#ffffff</item>
        <item name="text_muted">#606060</item>
        <item name="accent">#FEC260</item>
        <item name="white">#FFFFFF</item>
        <item name="over_bg">#FFFFFF</item>
    </style>
</resources>