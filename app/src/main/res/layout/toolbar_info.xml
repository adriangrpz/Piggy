<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        card_view:cardCornerRadius="12dp"
        card_view:layout_constraintTop_toTopOf="@id/h_guideline_5"
        card_view:layout_constraintStart_toEndOf="@id/v_guideline_5"
        card_view:layout_constraintBottom_toTopOf="@id/h_guideline_30"
        card_view:layout_constraintEnd_toStartOf="@id/v_guideline_95"
        >

        <include
            layout="@layout/main_balance_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        card_view:layout_constraintTop_toBottomOf="@id/h_guideline_30"
        card_view:layout_constraintBottom_toBottomOf="@id/h_guideline_95"
        card_view:layout_constraintStart_toStartOf="@id/v_guideline_5"
        card_view:layout_constraintEnd_toStartOf="@id/v_guideline_50"
        >

        <include
            layout="@layout/main_earnings_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        card_view:layout_constraintTop_toBottomOf="@id/h_guideline_30"
        card_view:layout_constraintBottom_toBottomOf="@id/h_guideline_95"
        card_view:layout_constraintStart_toStartOf="@id/v_guideline_50"
        card_view:layout_constraintEnd_toStartOf="@id/v_guideline_95"
        >

        <include
            layout="@layout/main_expenses_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_guideline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.05"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_guideline_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.95"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_guideline_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.50"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_guideline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_guideline_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_guideline_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.56" />

</androidx.constraintlayout.widget.ConstraintLayout>