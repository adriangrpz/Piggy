<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_top_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        card_view:layout_constraintHeight_percent=".45"
        card_view:layout_constraintTop_toTopOf="parent">

        <!-- Balance Frame -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/balance_card_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            card_view:layout_constraintHeight_percent="0.55"
            android:layout_margin="15dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/balance_card_bg"
            >

            <TextView
                android:id="@+id/balance_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="30dp"
                android:text="$0.00"
                android:textColor="@color/white"
                android:textSize="60sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Your balance"
                android:textColor="@color/gray"
                android:textSize="22sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/currency_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="40dp"
                android:text="MXN"
                android:textColor="@color/white"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            card_view:layout_constraintHeight_percent="0.32"
            android:layout_margin="15dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/balance_card_rl">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/earnings_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/earnings_expenses_bg"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintWidth_percent=".48" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expenses_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/earnings_expenses_bg"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintWidth_percent=".48" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactions_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        card_view:layout_constraintHeight_percent=".55"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@drawable/main_rounded_list"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
