<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:weightSum="100"
    android:background="@drawable/main_top_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45">

        <!-- Balance Frame -->
        <RelativeLayout
            android:id="@+id/balance_card_rl"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/balance_card_bg"
            />

        <RelativeLayout
            android:id="@+id/earnings_rl"
            android:layout_width="170dp"
            android:layout_height="112dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/balance_card_rl"
            android:background="@drawable/earnings_expenses_bg"
            />

        <RelativeLayout
            android:id="@+id/expenses_rl"
            android:layout_width="170dp"
            android:layout_height="112dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/balance_card_rl"
            android:background="@drawable/earnings_expenses_bg"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactions_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55"
        card_view:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@drawable/main_rounded_list" />

</LinearLayout>
